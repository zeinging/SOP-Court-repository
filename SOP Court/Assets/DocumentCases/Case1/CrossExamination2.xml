<Case>
	<CrossExamination onStand="Bagel Man">
		<TestimonySeries isConflicting="false">
			<TestimonyParagraph>
				<Line>I was visiting Craig at</Line>
				<Line>his house.</Line>
			</TestimonyParagraph>
			<PressedInteractions>
				<PressedInteraction>
					<Character>Defence</Character>
					<Paragraph>
						<Line>What was the occasion?</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>Well, he had a new</Line>
						<Line>pool installed.</Line>
					</Paragraph>
				</PressedInteraction>

				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>So, I'd figure I'd see if he wanted to go swimming.</Line>
					</Paragraph>
				</PressedInteraction>

				<PressedInteraction>
					<Character>Prosecution</Character>
					<Paragraph>
						<Line>Can't blame him. It was</Line>
						<Line>a hot week.</Line>
					</Paragraph>
				</PressedInteraction>
			</PressedInteractions>
		</TestimonySeries>

		<TestimonySeries isConflicting="false">
			<TestimonyParagraph>
				<Line>He didn't answer his door,</Line>
				<Line>so I checked around back.</Line>
			</TestimonyParagraph>


			<PressedInteractions>
				<PressedInteraction>
					<Character>Defence</Character>
					<Paragraph>
						<Line>Did craig seem to be home?</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>I had noticed his car</Line>
						<Line>was out front.</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>So, I assumed he was</Line>
						<Line>still at home.</Line>
					</Paragraph>
				</PressedInteraction>
			</PressedInteractions>
		</TestimonySeries>
		<TestimonySeries isConflicting="false">
			<TestimonyParagraph>
				<Line>When I got there, I saw</Line>
				<Line>him with Circuit Man.</Line>
			</TestimonyParagraph>
			<PressedInteractions>
				<PressedInteraction>
					<Character>Defence</Character>
					<Paragraph>
						<Line>Did you know Circuit Man was</Line>
						<Line>going to be there?</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>Not really. We both knew</Line>
						<Line>Craig, though.</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>So I guess it's not surprising</Line>
						<Line>that he was there as well.</Line>
					</Paragraph>
				</PressedInteraction>
			</PressedInteractions>
		</TestimonySeries>

		<TestimonySeries isConflicting="false">
			<TestimonyParagraph>
				<Line>Circuit Man was face-down</Line>
				<Line>on the ground, bleeding</Line>
				<Line>out from a head wound.</Line>
			</TestimonyParagraph>
			<PressedInteractions>
				<PressedInteraction>
					<Character>Defence</Character>
					<Paragraph>
						<Line>Where was Craig standing</Line>
						<Line>in this scenario?</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>From the way Circuit Man</Line>
						<Line>was laying, Craig would'</Line>
						<Line>been...</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>...pretty sure it would've been</Line>
						<Line>behind him.</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Defence</Character>
					<Paragraph>
						<Line>So it would've been a sneak</Line>
						<Line>attack?</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>Probably, I just saw</Line>
						<Line>the aftermath.</Line>
					</Paragraph>
				</PressedInteraction>
			</PressedInteractions>
		</TestimonySeries>

		<TestimonySeries isConflicting="false">
			<TestimonyParagraph>
				<Line>And Craig was holding a</Line>
				<Line>pool cleaning stick, the murder</Line>
				<Line>weapon, I believe.</Line>
			</TestimonyParagraph>
			<PressedInteractions>

				<PressedInteraction>
					<Character>Defence</Character>
					<Paragraph>
						<Line>Pool cleaning sticks aren't</Line>
						<Line>*that* hard. </Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Defence</Character>
					<Paragraph>
						<Line>Do you really think that</Line>
						<Line>killed him?</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>Right, the hard floor around</Line>
						<Line>the pool.</Line>
					</Paragraph>
				</PressedInteraction>

				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>Craig probably knocked him</Line>
						<Line>over with the stick...</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>...And then Circuit Man hit his head badly.</Line>
					</Paragraph>
				</PressedInteraction>
			</PressedInteractions>
		</TestimonySeries>

		<TestimonySeries isConflicting="false">
			<TestimonyParagraph>
				<Line>I shouted at him and </Line>
				<Line>tried to give chase.</Line>
			</TestimonyParagraph>
			<PressedInteractions>

				<PressedInteraction>
					<Character>Defence</Character>
					<Paragraph>
						<Line>Did Craig say anything</Line>
						<Line>back?</Line>
					</Paragraph>
				</PressedInteraction>

				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>No, nothing. He seemed more</Line>
						<Line>surprised that I was there.</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>But he sure knew how to run!</Line>
					</Paragraph>
				</PressedInteraction>
			</PressedInteractions>
		</TestimonySeries>
		<TestimonySeries isConflicting="false">
			<TestimonyParagraph>
				<Line>But Craig kicked the body into</Line>
				<Line>the pool and escaped.</Line>
			</TestimonyParagraph>
			<PressedInteractions>

				<PressedInteraction>
					<Character>Defence</Character>
					<Paragraph>
						<Line>But Circuit Man's body was found</Line>
						<Line>outside of the pool.</Line>
					</Paragraph>
				</PressedInteraction>

				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>That's right. I wound up pulling</Line>
						<Line>him out .</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>It didn't feel right to leave</Line>
						<Line>him just lying in there.</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>That... that doesn't count as tampering</Line>
						<Line>with a crime scene, right?</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Prosecution</Character>
					<Paragraph>
						<Line>Now's not the time to worry about that.</Line>
					</Paragraph>
				</PressedInteraction>
			</PressedInteractions>
		</TestimonySeries>
		<TestimonySeries isConflicting="false">
			<TestimonyParagraph>
				<Line>That's when I called the</Line>
				<Line>police</Line>
			</TestimonyParagraph>
			<PressedInteractions>

				<PressedInteraction>
					<Character>Defence</Character>
					<Paragraph>
						<Line>So, you were the one to</Line>
						<Line>call the police?</Line>
					</Paragraph>
				</PressedInteraction>

				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>Yep, that was me.</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>Couldn't leave my friend</Line>
						<Line>in a bad situation like that!</Line>
					</Paragraph>
				</PressedInteraction>
				<PressedInteraction>
					<Character>Bagel Man</Character>
					<Paragraph>
						<Line>Event if he was dead.</Line>
					</Paragraph>
				</PressedInteraction>
			</PressedInteractions>
		</TestimonySeries>
	</CrossExamination>
</Case>
